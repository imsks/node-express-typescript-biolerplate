{
    "compilerOptions": {
        "outDir": "build",
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts", "node_modules", "src/__test__"]
}
