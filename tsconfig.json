{
    "compilerOptions": {
        "outDir": "build",
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "src",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "compileOnSave": true,
    "include": ["./**/*"],
    "exclude": ["./**/*.spec.ts", "node_modules", "./__test__"]
}
